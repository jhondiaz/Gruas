    .ser {
        display: flex !important;
    }

    .bl {
        width: 200px;
    }

    .add-on {
        font-size: 16px !important;
    }

    .growl-container.growl-fixed.top-right {
        z-index: 999999;
    }

    input[type=text] {
        height: 14px;
    }    
