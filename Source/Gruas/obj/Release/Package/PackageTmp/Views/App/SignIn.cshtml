





<div class="userdata" style="padding:10px;">
    <div style="border:2px solid #e5e5e5;height:100%;width:100%;border-radius:20px;">
        <div class="row-fluid" style="margin-top:0px !important;">
            <div class="span12" style="padding:10px;">

                <div class="control-group" style="display:flex;">
                    <label class="control-label">Tipo Usuario:</label>
                    <div class="controls" style="display:flex;">
                        <label style="">Agente</label><input style="margin-left:5px" id="rdage" ng-click="rdage()" type="radio" name="name" value="" />
                        <label style="margin-left:20px;">General</label><input style="margin-left:5px" id="rdgen" ng-click="rdgen()" type="radio" name="name" value="" />
                    </div>
                </div>


                <div class="control-group">
                    <label class="control-label">Nombre y Apellido:</label>
                    <div class="controls">
                        <input type="text" class="span11" ng-model="firstname" capitalize placeholder="Nombre y Apellido" />
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label">Email:</label>
                    <div class="controls">
                        <input type="email" class="span11" ng-model="Email" placeholder="Email" />
                    </div>
                </div>


                <!---->
                <div class="control-group">
                    <label class="control-label">Entidad:</label>
                    <div class="controls">
                        <input type="text" class="span11" ng-model="Entidad" onlyletters capitalize placeholder="Entidad" />
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label">Telefono:</label>
                    <div class="controls">
                        <input type="text" class="span11" ng-model="Telefono" onlynumbers placeholder="Telefono" />
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label">Tipo Documento:</label>
                    <div class="controls">
                        <select class="span11" ng-model="TipoDoc">
                            <option value="CC">Cédula Ciudadania</option>
                            <option value="CE">Cédula Extranjería</option>
                        </select>
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label">Numero Documento:</label>
                    <div class="controls">
                        <input type="text" class="span11" ng-model="NumDoc" onlynumbers placeholder="Numero Documento" />
                    </div>
                </div>
                <div class="control-group" ng-show="tpuser">
                    <label class="control-label">Placa Agente:</label>
                    <div class="controls">
                        <input type="text" class="span11" ng-model="PlacaAgente" capitalize placeholder="Placa Agente" />
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label">Nombre Jefe:</label>
                    <div class="controls">
                        <input type="text" class="span11" ng-model="NombreJefe" capitalize onlyletters placeholder="Nombre Jefe" />
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label">Telefono Jefe:</label>
                    <div class="controls">
                        <input type="text" class="span11" ng-model="TelefonoJefe" onlynumbers placeholder="Telefono Jefe" />
                    </div>
                </div>
                <button type="submit" ng-click="RegRequest()" class="btn btn-success">Solicitar</button>

            </div>
        </div>
    </div>
</div>

