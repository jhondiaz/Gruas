<div id="loginbox" style="height:340px;width:450px;background-color: rgba(255, 255, 255, 0.7);box-shadow: 1px 1px 10px 0px #cecece;border-radius: 5px;position:absolute;top: 0; bottom: 0; left: 0; right: 0;margin: auto;">
    <div style="width:100%;height:100px;background-color:transparent;border-top-left-radius:5px;border-top-right-radius:5px;box-shadow:0px 2px 10px 0px #cecece;margin-bottom:30px; text-align:center">
        <img style="height:75px;margin-top:18px;" src="~/img/IconoLof.png" />
    </div>

    <form id="loginform" class="form-vertical" ng-submit="valDate()">

        <div style="margin-right:auto;margin-left:auto;background-color:transparent;text-align:center;margin-bottom:10px;">
            <div class="controls">
                <label>USUARIO</label>
                <input type="text" ng-model="username" placeholder="USUARIO" style="width:70%;border-radius:20px;" />
            </div>
            <div class="controls">
                <label>CONTRASEÑA</label>
                <input type="password" ng-model="password" placeholder="CONTRASEÑA" style="width:70%;border-radius:20px;" />
            </div>
        </div>
        <div style="margin-right:auto;margin-left:auto;background-color:transparent;text-align:center;margin-bottom:20px;" ng-show="dislog">
            <img  src="~/img/30.gif" style="margin-right:auto;margin-left:auto;" />
            <label style="color:#009fe3">Iniciando Sesión</label>
        </div>

        <div style="margin-right:auto;margin-left:auto;background-color:transparent;text-align:center;margin-bottom:20px;" ng-show="!dislog">
            <input type="submit" class="btn btn-success" value="INGRESAR" style="width:120px;border-radius:20px;background:#009fe3 !important;" />
            <label ng-click="openmode()">¿Has olvidado los datos de la cuenta?</label>
        </div>
    </form>
</div>



<div class="modal fade" id="modaledit" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="width:30%;margin-left:-16%; top:450px;display:none;padding:15px;">
    <div class="widget-box">
        <div class="widget-title">
            <span class="icon"> <i class="icon-align-justify"></i> </span>
            <h5>Reiniciar Contraseña</h5>
        </div>

        <div class="control-group" style="display:flex;">
            <label class="control-label ffl">Email:</label>
            <div class="controls">
                <input type="text" ng-model="mail" placeholder="Email" style="width:100%;margin-left:10px;" />
            </div>
        </div>
        <div style="height:30px;">
            <input ng-click="changepassbyemail(mail)" class="btn btn-success" value="Restablecer" style="float:right;width:100px;" />
            <button style="float:right;margin-right:15px" type="button" class="btn btn-default" data-dismiss="modal">Salir</button>
        </div>
    </div>
</div>
