

<div ng-cloak>
    <div growl></div>
    <!--Header-part-->
    <div id="header" style="z-index:99">

        <div class="row-fluid">
            <div class="span3">
                <img style="height:73px;margin-top:20px;margin-left:50px;cursor:pointer;" src="~/img/logo.png" ng-click="RedicHome()"/>
            </div>
            <div class="span4">
                <label id="title" style="color: white; margin-top:55px;font-family:Gotham Rounded Bold;font-size:19px;">SECRETARÍA DISTRITAL DE MOVILIDAD</label>
            </div>
            <div class="span3">
                <img style="height:60px;margin-top:38px;margin-right:20px;" src="~/img/logo-horizontal.png" />
            </div>
            <div class="span2" style="margin-left:70px;margin-top:20px;" ng-hide="!loggedIn">
                <label style="font-family:Gotham Rounded Bold;margin-top:30px;color: white;margin-right:15px;">
                    {{username}}
                    <br />
                    <label style="cursor:pointer;text-decoration:underline;" ng-click="logout()">Cerrar Sesion</label>
                </label>
            </div>
            <div class="span2" style="display:flex;margin-left:70px;" ng-hide="!intro">
                <div ng-click="showdata()" title="Solicitar Creación de Usuario">
                    <img style="margin-top:40px;" src="~/img/userlog.png" />
                </div>
                <label ng-click="showdata()" style="font-family:Gotham Rounded Bold;margin-top:30px;color: white;margin-top:55px;margin-left:15px; ">
                    Solicitud de Usuario
                </label>
            </div>
        </div>
    </div>
    <!--close-Header-part-->
    <!--top-Header-messaages-->
    <div class="btn-group rightzero" ng-hide="!loggedIn">
        <a class="top_message tip-left" title="Manage Files">

        </a>
        <a class="top_message tip-bottom" title="Manage Users">

        </a>
        <a class="top_message tip-bottom" title="Manage Comments">
        </a>
        <a class="top_message tip-bottom" title="Manage Orders"></a>
    </div>
    <!--close-top-Header-messaages-->
    <!--top-Header-menu-->
    @*<div id="user-nav" class="navbar navbar-inverse" ng-hide="!loggedIn">
            <ul class="nav">
                <li class=""><a title="" href="#"><i class="icon icon-user"></i><span class="text">{{username}}</span></a></li>
                <li class=""><a title="" href="" ng-click="logout()"><i class="icon icon-share-alt"></i><span class="text">Logout</span></a></li>
            </ul>
        </div>*@

    <!--close-top-Header-menu-->
    <div id="sidebar" ng-hide="!loggedIn">
        <ul>
            <li class="submenu" ng-repeat="Hs in ListMenuLog">
                <a href=""><i class="icon {{Hs.Icon}}"></i><span>{{Hs.Name}}</span> </a>
                <ul>
                    <li ng-repeat="Hsb in Hs.SubMenu" ng-show="Hsb.Mostrar == true"><a href="#{{Hsb.AUrl}}"><i class="icon {{Hsb.Icon}}"></i><span>{{Hsb.SubMenu}}</span></a> </li>
                </ul>
            </li>
        </ul>
    </div>
    <div id="content" ng-class="{mylogin:!loggedIn}">

        <div class="container-fluid">
            <div ng-view> </div>
            @*<hr ng-hide="!loggedIn">*@
        </div>
    </div>


    <div class="row-fluid">
        <div id="footer" class="span12">@DateTime.Now.Year Todos los derechos reservados SKG TECNOLOGÍA</div>
    </div>

</div>

<div class="modal fade" id="modalpaslogin" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="width:70%;margin-left:-35%; top:45%;display:none;padding-bottom:15px;">
    <div style="width:100%;background-color:#003e65;height:25px;margin-bottom:10px;color:white;text-align:center;font-weight:bold;padding-top:0px;">
        Cambiar Contraseña
    </div>

    <div class="form-horizontal" style="width:90%;margin-right:auto;margin-left:auto;box-shadow: 1px 1px 10px 0px #cecece;padding:15px;">
        <br />

        <div class="row-fluid">
            <div class="span3">
                <label class="control-label ffl">Contraseña Anterior:</label>
            </div>
            <div class="span9">
                <input type="password" class="span12" ng-model="val.OldPassword" placeholder="Confirm Password" />
            </div>
        </div>
        <br />
        <div class="row-fluid">
            <div class="span3">
                <label class="control-label ffl">Nueva Contraseña:</label>
            </div>
            <div class="span9">
                <input class="span12" type="password" ng-model="val.NewPassword" placeholder="Password" />
            </div>
        </div>

        <br />

        <div class="row-fluid">
            <div class="span3">
                <label class="control-label ffl">Confirmar Contraseña:</label>
            </div>

            <div class="span9">
                <input type="password" class="span12" ng-model="val.ConfirmPassword" placeholder="Confirm Password" />
            </div>
        </div>
        <br />

        <div style="height:30px;">
            <button style="float:right;" ng-click="actualizar()" class="btn btn-success">Cambiar Contraseña</button>
            <button style="float:right;margin-right:15px" type="button" class="btn btn-default" data-dismiss="modal">Salir</button>
        </div>
    </div>
</div>


