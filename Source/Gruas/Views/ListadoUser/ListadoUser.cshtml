
@{
    ViewBag.Title = "ListadoUser";
}


@{
    ViewBag.Title = "ReporteUsuario";
}



<div class="widget-content nopadding">
    <div class="form-horizontal">
        <div class="titleforms">
            Reporte Usuarios del Sistema
        </div>
    </div>
    <div style="padding-right:15px;padding-left:15px;margin-bottom:20px;">
        <div class="row-fluid row-padding export" style="text-align:center;border:2px solid #aca7a7;padding-top:25px;padding-bottom:25px;">
            <div id="valoresenc">
                <div class="span12" style="margin-left:40px;">
                    <div class="span3 im1">
                        <img src="~/img/Escudo-institucional-Colores.png" style="height:85px;" />
                    </div>
                    <div class="span6" style="text-align:center;">
                        <label style="color:#003e65;font-size:20px;font-weight:bold;margin-top:30px;">Listado de Usuarios del Sistema por Rol y Estado</label>

                    </div>
                    <div class="span3 im2">
                        <img src="~/img/solgr.png" style="height:85px;" />
                    </div>
                </div>

                <div class="span12" style="margin-top:20px;">
                    <hr />
                </div>

                <div class="span12" style="font-size:15px;">
                    <div class="span6 tl">
                        <label>Fecha: {{fecha}}</label>
                    </div>
                    <div class="span6 tl">
                        <label>Usuario Solicitante: {{userfirst}}</label>
                    </div>
                </div>

                <div class="span12">
                    <hr />
                </div>
            </div>
            <div class="span12" style="margin-top:10px;font-size:15px;">
                <div class="span12">
                    <div class="span3 tl">
                        <label>Nombre Rol</label>
                    </div>
                    <div class="span3 tl">
                        <label>Documento Usuario</label>
                    </div>
                    <div class="span3 tl">
                        <label>Usuario</label>
                    </div>
                    <div class="span3 tl">
                        <label>Estado</label>
                    </div>
                </div>

                <div class="span12" id="editable" ng-repeat="itm in reportl | startFromGrid: currentPage * pageSize | limitTo: pageSize">
                    <div class="span3">
                        <label>{{itm.Rol}}</label>
                    </div>
                    <div class="span3">
                        <label>{{itm.User}}</label>
                    </div>
                    <div class="span3">
                        <label>{{itm.Doc}}</label>
                    </div>
                    <div class="span3">
                        <label ng-show="itm.Estado == 1">Activo</label>
                        <label ng-show="itm.Estado == 0">Inactivo</label>
                    </div>
                </div>

                <div class="span12">
                    <hr style="height:2px !important" />
                </div>

                <div class='btn-group span12' style="margin-bottom:5px;text-align:right;padding-right:50px;">

                    <input type="image" src="~/img/al-primero.png" ng-disabled='currentPage == 0' ng-click='currentPage = 0' style="background-color:transparent;margin-right:10px;" />
                    <input type='image' src="~/img/Atras.png" ng-disabled='currentPage == 0' ng-click='currentPage = currentPage - 1' style="background-color:transparent;height:25px;" />

                    <select id="lks" ng-model="valueopt" ng-change="setPage(valueopt)" style="width:40px;height:20px;padding:0 !important;margin-right:10px;margin-left:10px;margin-top:10px;">
                        <option ng-repeat="page in pages" ng-click="testjr()" value="{{page.no}}">{{page.no}}</option>
                    </select>
                    @*<button type='button' class='btn btn-default'  ng-click='setPage(page.no)' ng-repeat='page in pages'>{{page.no}}</button>*@

                    <input type="image" src="~/img/Adelante.png" ng-disabled='currentPage >= reportl.length/pageSize - 1' ng-click='currentPage = currentPage + 1' style="background-color:transparent;height:25px" />

                    <input type="image" src="~/img/al-primero.png" ng-disabled='currentPage >= reportl.length/pageSize - 1' ng-click='currentPage = pages.length - 1' style="background-color:transparent;-ms-transform: rotate(180deg);-webkit-transform: rotate(180deg);transform: rotate(180deg);margin-left:10px;" />
                </div>
            </div>

        </div>
        <div class="row-fluid row-padding" style="text-align:right;">
            <img src="~/img/exceli.png" ng-click="excel($event)" />

            <img src="~/img/pdfi.png" ng-click="exportpdf()" id="cmd" />
        </div>
    </div>
</div>

<style>
    hr {
        margin: 0 auto;
        background-color: #003e65;
        height: 3px;
        margin-top: 10px;
    }

    .tl label {
        font-size: 18px;
        font-weight: bold;
        color: #003e65;
    }
</style>

