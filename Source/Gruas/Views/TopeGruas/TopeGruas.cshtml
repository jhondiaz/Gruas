
@{
    ViewBag.Title = "TopeGruas";
}

<div class="widget-content nopadding">
    <div class="form-horizontal">
        <div class="titleforms">
            Modificar Numero de Vehículos por Solicitud
        </div>
    </div>

    <div class="row-fluid" style="text-align:center;margin-top:20px;">
        <label style="font-weight:bold;">Numero de Vehículos por Solicitud Configurados : {{listgr}}</label>
    </div>

    <div class="row-fluid" style="padding:15px;padding-bottom:0 !important;padding-top:3px !important;margin-top:15px;">
        <div class="span12">
            <div class="span3" style="text-align:left;">
                <label style="font-weight:bold;">Numero de Vehículos por Solicitud</label>
            </div>
            <div class="span9">
                <input type="text" class="span12" ng-model="ngruas" capitalize onlynumbers placeholder="Numero de Vehículos" />
            </div>
        </div>
    </div>

    <div class="row-fluid" style="text-align:center;margin-top:20px;">
        <input style="width:120px;" type="button" class="btn btn-success" ng-click="Actualizar()" name="name" value="Actualizar" />
    </div>
</div>